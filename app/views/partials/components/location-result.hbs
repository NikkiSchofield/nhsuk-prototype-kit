<div class="c-location-result u-clearfix">

  <div class="c-location-result__result-wrapper">
    <h2 class="c-location-result__title"><a href="{{title_url}}">{{title}}</a></h2>
    <div class="c-location-result__address">{{address}}</div>
    <div class="c-location-result__telephone">{{telephone}}</div>
  </div>

  <div class="c-location-result__status-wrapper">
    <div class="c-location-result__status c-location-result__status--isOpen">
        {{status}}
    </div>
    <div class="c-location-result__meta-status">{{meta_status}}</div>
  </div>

  <div class="c-location-result__distance-wrapper  u-clearfix">
    <span class="c-location-result__distance">{{distance}}&nbsp;</span>
    <span class="c-location-result__directions"><a href="{{distance_url}}" class="c-location-result__action">Get directions</a></span>
  </div>

</div>
